<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="MCT.DB.Entities" namespace="MCT.DB.Entities">
  <class name="Predicate" table="Predicates">
    
    <id name="Id" type="Int64" unsaved-value="0">
      <column name="Id" />
      <generator class="native" />
    </id>

    <!--//Name und Hierarchie-->
    <property name="Name" type="String"/>
    <property name="Description" type="String"/>
    
    <set name="Parent" cascade="all-delete-orphan">
      <key column="Parent" />
      <one-to-many class="MCT.DB.Entities.Predicate, MCT.DB.Entities" />
    </set>

  </class>
</hibernate-mapping>
