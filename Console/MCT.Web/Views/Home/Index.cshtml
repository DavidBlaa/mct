@model Dictionary<string, int>

@{
    ViewBag.Title = "Garten Erde";
}

<div class="jumbotron head">
    <h2>Garten Erde</h2>
    <p class="lead">Anbau in Harmonie mit der Natur.</p>
</div>

<div class="row home-content">
    <a class="mct-container-link" href="/search/search">
        <div class="col-md-3 col-lg-3">
            <h2><span class="fa fa-book"></span>   Lexikon</h2>
            <br />
            <p class="text-justify">
                Nachschlagewerk für Nutzplfanzen und Lebenwesen. Die Filtermöglichkeiten beziehen sich neben Name auch auf Interkationen,
                Zeiten und Beflanzungseigenschaften.
            </p>
        </div>
    </a>
    <a class="mct-container-link" href="/Calendar/Index">
        <div class="col-md-3 col-lg-3">
            <h2><span class="fa fa-calendar"></span>  Saisonkalendar</h2>
            <br />
            <p class="text-justify">
                Wann wird welches Gemüse angepflanzt oder geerntet? Hier findest du einen Überblick.
            </p>
        </div>
    </a>
    <a class="mct-container-link" href="/Patch/Index">
        <div class="col-md-3 col-lg-3">
            <h2><span class="fa fa-cubes"></span> Gartenplaner</h2>
            <br />
            <p class="text-justify">
                Im Bezug auf Mischkultur hilft der Gartenplaner bei der Bepflanzung.
            </p>
        </div>
    </a>
    <a class="mct-container-link" href="/Interaction/ShowInteractions">
        <div class="col-md-3 col-lg-3 text-justify">
            <h2><span class="fa fa-share-alt-square"></span> Beziehungskiste</h2>
            <br />
            <p class="text-justify">
                Es gibt viele Möglichkeiten Pflanzen, bei der Positionierung auf einem Beet, zu kombinieren.
                Manche sind gut und mansche sind schlecht. Hier findest du eine Übersicht über die hier genannten Interaktion.
            </p>
        </div>
    </a>
</div>

<div class="timeline-row">
    <div id="timeline"></div>
</div>
@Html.Partial("_statistics", Model)

<style type="text/css">

    .head {
        background-image: url(../../Images/page/vladstudio_socotra_wallpaper.jpg);
        color: white;
    }

    .timeline-row {
        background-color: #eee;
        width: 100%;
        padding: 0;
        margin: 0;
    }

    .home-content {
        padding: 50px;
    }
</style>

@section scripts
{
    <script type="text/javascript">

        var myEvents = [{
            date: 'Q1 - 2019',
            content: 'Lexikon fertigstellen'
        }, {
            date: 'Q2 - 2019',
            content: 'Nutzerverwaltung und erste Daten einfplegen.'
        }, {
            date: 'Q3 - 2019',
            content: 'Tests mit echten Nutzern.'
        },
        {
            date: 'Q4 - 2019',
            content: 'Beetplaners Version 1'
        }
        ];

        $(function () {
            $('#timeline').roadmap(myEvents);
        });
    </script>
}