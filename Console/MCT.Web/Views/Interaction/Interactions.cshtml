<script>
    $(document)
        .ready(function () {
            $('#interactions-table')
                .DataTable(
                {
                    processing: true,
                    serverSide: true,
                    ajax: {
                        "url":"/Interaction/Load",
                        "type": "POST"
                    }
                    ,
                    columns: [
                        { data: 'Id' },
                        { data: 'Subject' },
                        { data: 'Predicate' },
                        { data: 'Object' },
                        { data: 'ImpactSubject' },
                        { data: 'Indicator' }
                    ]
                });
        });
</script>

