@model MCT.Web.Models.PlantModel


@{ 
    string name = "noname";
    string abbr = "NaN";

    if (!string.IsNullOrEmpty(@Model.Name))
    {
        name = Model.Name;
    }

    if (!String.IsNullOrEmpty(Model.Name))
    {
        abbr = "";

        foreach (char letter in Model.Name)
        {
            if (Char.IsUpper(letter))
            {
                abbr += letter;
            }
        }
    }
}

<div id="@Model.Id" class="content patch-planer-search-result-element col-xs-11" >
    <div class="@headerClassName" >
        <h5 class="name col-lg-8">
            @Html.ActionLink(@name, "Details", "Subject", new { id = Model.Id, type = @Model.Type.ToString() }, new {target="blank"})
        </h5>
        
        <div plantid="@Model.Id" class="add-plant-to-patch-bt fa fa-plus mct-button-icon"></div>
    </div>
    <div>
        (@Model.Width x @Model.Height)<br />
        @abbr
    </div>
</div>
