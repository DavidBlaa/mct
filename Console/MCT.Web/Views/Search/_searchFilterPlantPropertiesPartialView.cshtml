@model MCT.Web.Models.FilterModel

<div class="row">
    <div class="col-md-3 col-sm-6">
        <h4>Nährstoff-Anspruch</h4>
        @Html.EnumDropDownListFor(model => model.NutrientClaim, "-- Select --", new { @class = "form-control dropdown", onchange = "change(this)" })
    </div>
    <div class="col-md-3 col-sm-6">
        <h4>Würzel-Tiefe</h4>
        @Html.EnumDropDownListFor(model => model.RootDepths, "-- Select --", new { @class = "form-control dropdown", onchange = "change(this)" })
    </div>
</div>

<script type="text/javascript">

    function change(e) {

        var url = '@Url.Action("SetFilter", "Search")';
            $.post(url, { key: e.id, value: e.value },
            function (data) {
                if(data === true)
                    UpdateSearch();
                    UpdateBreadcrumb();
            });

    }
</script>