@model MCT.Web.Models.Search.SubjectModel
@using MCT.Web.Models;

<div class="item @Model.Type.ToString().ToLower()">
    
    <h3 class="name">@Model.Name</h3>
    <p class="description" hidden="hidden" >@Model.Description</p>
    <p class="type" hidden="hidden">@Model.Type.ToString()</p>
</div>


<style type="text/css">
    .item {
        border-top-style: solid;
        width: 100px;
        height: 100px;
    }

        .item.effect {
            background-color: greenyellow;
        }

        .item.plant {
            background-color: lightskyblue;
        }

        .item.animal {
            background-color: darkorange;
        }

        .item.gigante {
          width: 200px;
          height: 300px;
          background: #F80;
        }

        .item:hover {
          background: #EEE;
          cursor: pointer;
        }
</style>
