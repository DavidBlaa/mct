@using MCT.Web.Models;
@model SimpleNodeViewModel

@{
    ViewBag.Title = "_taxonRankPartialView";
}
<div class="row">
    <div id="TaxonRank" class="col-md-2">
        <b>@Model.TaxonRank : </b>
    </div>

    <div id="TaxonName" class="col-md-4">
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>
    
    <div id="TaxonScientificName" class="col-md-5">
        @Html.EditorFor(model => model.ScientificName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ScientificName, "", new { @class = "text-danger" })
    </div>
    
</div>

@if (Model.Parent != null)
{
    @Html.Partial("_taxonRankPartialView", Model.Parent)

}
