@model MCT.Web.Models.InteractionModel

<tr id="@Model.Id" class="interaction-row">
    <td>
        @Html.DisplayFor(modelItem => Model.Indicator, new { htmlAttributes = new { @class = "form-control" } })
    </td>
    <td>
        @Html.HiddenFor(modelItem => Model.Subject.Id)
        @Html.HiddenFor(modelItem => Model.Subject.Type)
        @*@Html.DisplayFor(modelItem => Model.Subject.Name, new { htmlAttributes = new { @class = "form-control " } })*@
        @Html.ActionLink(Model.Subject.Name, "Details", "Subject", new { id = Model.Subject.Id, type = @Model.Subject.Type.ToString() },
        new { htmlAttributes = new { @class = "form-control" } })



    </td>
    <td>
        @Html.HiddenFor(modelItem => Model.Predicate.Id)
        @Html.DisplayFor(modelItem => Model.Predicate.Name, new { htmlAttributes = new { @class = "form-control" } })

        @Html.DisplayFor(modelItem => Model.Predicate.ParentName, new { @class = "form-control " })
    </td>
    <td>
        @Html.HiddenFor(modelItem => Model.Object.Id)
        @Html.HiddenFor(modelItem => Model.Object.Type)
        @*@Html.DisplayFor(modelItem => Model.Object.Name, new { htmlAttributes = new { @class = "form-control" } })*@
        @Html.ActionLink(Model.Object.Name, "Details", "Subject", new { id = Model.Object.Id, type = @Model.Object.Type.ToString() },
        new { htmlAttributes = new { @class = "form-control" } })



    </td>
    <td>
       
        @*@Html.DisplayFor(modelItem => Model.ImpactSubject.Name, new { htmlAttributes = new { @class = "form-control" } })*@

        @if (Model.ImpactSubject != null)
        {
            string name = " ";
            if (!String.IsNullOrEmpty(Model.ImpactSubject.Name))
            {
                name = Model.ImpactSubject.Name;
            }
            @Html.HiddenFor(modelItem => Model.ImpactSubject.Id)
            @Html.HiddenFor(modelItem => Model.ImpactSubject.Type)

            @Html.ActionLink(name, "Details", "Subject",
            new {id = Model.ImpactSubject.Id, type = @Model.ImpactSubject.Type.ToString()},
            new {htmlAttributes = new {@class = "form-control"}})
        }

    </td>
    <td>
       @* <div class="col-md-1"><div class="fa fa-trash icon" onclick="removeInteraction(this)" /></div>*@
    </td>
</tr>