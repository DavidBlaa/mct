@using MCT.Web.Models

@model Tuple<NodeModel, List<InteractionModel>>

@{
    long id = Model.Item1.Id;
    List<string> parents = new List<string>();
    var tmp = Model.Item1.Parent;

    if (tmp != null)
    {
        parents.Add(tmp.Name);
        while (tmp.Parent != null)
        {
            if (tmp.Parent != null)
            {
                tmp = tmp.Parent;
                parents.Add(tmp.Name);
            }
        }
    }

    List<InteractionModel> list = Model.Item2;

    var subjects = list.Where(i =>
        (i.Subject.Id != id && !parents.Contains(i.Subject.Name)));

    subjects.ToList().OrderBy(i => i.Subject.Name);

    var objects = list.Where(i =>
        (i.Object.Id != id && !parents.Contains(i.Object.Name)));

    objects.ToList().OrderBy(i => i.Object.Name);

}
<div class="row">
    <div class="col-md-5 interaction-header"><span class="fa fa-arrow-right"></span></div>
    <div class="col-md-2">@Model.Item1.Name</div>
    <div class="col-md-5 interaction-header"><span class="fa fa-arrow-right"></span></div>
</div>
<div class="row">
    <div class="col-md-5">
        <ul class="list-group">

            @foreach (var s in subjects)
            {
                string iconClass = "";
                if (s.Predicate.Id.Equals(1) || s.Predicate.ParentName.Equals("positiv"))
                {
                    iconClass = "fa-thumbs-up positive";
                }
                else
                {
                    iconClass = "fa-thumbs-down negative";
                }

                string tooltip = s.Subject.Name + " -> " + s.Predicate.Name + " -> " + s.Object.Name;

                <li class="list-group-item">
                    <span class="fa @iconClass"></span>
                    @Html.ActionLink(s.Subject.Name, "Details", "Subject", new { id = s.Subject.Id, type = s.Subject.Type.ToString() }, new { htmlAttributes = new { @class = "form-control" } })
                    <span class="info fa fa-question right" title="@tooltip"></span>
                </li>
            }
        </ul>
    </div>
    <div class="col-md-2"></div>
    <div class="col-md-5">
        <h4></h4>
        <ul class="list-group">

            @foreach (var o in objects)
            {
                string iconClass = "";
                string tooltip = o.Subject.Name + " -> " + o.Predicate.Name + " -> " + o.Object.Name;

                if (o.Predicate.Id.Equals(1) || o.Predicate.ParentName.Equals("positiv"))
                {
                    iconClass = "fa-thumbs-up positive";
                }
                else
                {
                    iconClass = "fa-thumbs-down negative";
                }

                <li class="list-group-item">
                    <span class="fa @iconClass"></span>
                    @Html.ActionLink(o.Object.Name, "Details", "Subject", new { id = o.Object.Id, type = o.Object.Type.ToString() }, new { htmlAttributes = new { @class = "form-control" } })
                    <span class="info  fa fa-question right" title="@tooltip"></span>
                </li>
            }
        </ul>
    </div>
</div>

<style type="text/css">
    .info {
        position: absolute;
        right: 9px;
        color: #bbbbbb;
    }

    .interaction-header {
        text-align: center;
        font-size: x-large;
    }

    .animal {
        border-color: darkorange;
    }

    .plant {
        border-color: yellowgreen;
    }

    .taxon {
        border-color: cadetblue;
    }

    .positive {
        color: yellowgreen;
    }

    .negative {
        color: red;
    }

    .list-group-item span {
        font-size: 20px;
    }
</style>