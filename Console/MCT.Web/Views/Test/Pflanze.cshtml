@model  MCT.Web.Models.Test.PflanzenModel

@{
    int x = 50 + Model.X;
    int y = 50 + Model.Y;
}

<g id="@Model.Name">
    <rect id="r" x="@Model.X" y="@Model.Y" width="100" height="100" stroke="red" stroke-width="3px" fill="#eeeeee" />
    <text x="@x" y="@y" alignment-baseline="middle" text-anchor="middle" fill="green" font-size="12" font-weight="bolder">@Model.Name</text>
</g>