@model MCT.Web.Models.Search.PlantModel

@{
    ViewBag.Title = "Plant";
}

<div id="DetailsHeader" class="jumbotron">
    <h2>@Html.DisplayFor(model => model.Name)</h2>
    <h3>@Html.DisplayFor(model => model.ScientificName)</h3>
</div>
<div id="DetailsContent" class="row">
    <div id="Image" class="col-md-4">
        <img src="@Model.ImagePath" class=" speciesImage img-responsive " />
    </div>
    <div class="col-md-8">
        <div id="Description" class="col-md-8">
            <h4>Beschreibung</h4>
            @Html.DisplayFor(model => model.Description)
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-8">

        <h4>Details</h4>

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Width)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Width)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Height)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Height)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.RootDepth)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RootDepth)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.NutrientClaim)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NutrientClaim)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.SowingDepth)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SowingDepth)
            </dd>
        </dl>
    </div>
</div>

<div>
    <h4>Termine</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Bloom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Bloom)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Sowing)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sowing)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Harvest)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Harvest)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SeedMaturity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SeedMaturity)
        </dd>
    </dl>
</div>
<p>
    @*@Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |*@
    @Html.ActionLink("Back to List", "Search")
</p>

<style type="text/css">
.row {
    margin-bottom: 20px;
}
    
.speciesImage {
        
    width:  390px;
    height: 390px;
    text-align: center;
}

</style>