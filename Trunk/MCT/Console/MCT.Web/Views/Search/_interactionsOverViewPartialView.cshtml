@model List<InteractionModel>

@using MCT.Web.Models.Search;

<div class="row">
    <h4>Interaktionen</h4>

    @if (Model != null && Model.Count > 0)
    {
        <table class="table">
            @foreach (var interaction in Model)
            {
                <tr>
                    <td>
                        @if (interaction.Subject != null)
                        {
                            @Html.ActionLink(interaction.Subject.Name, "Details", new { id = interaction.Subject.Id, type = interaction.Subject.Type })
                        }
                    </td>
                    <td>
                        @if (interaction.Predicate != null)
                        {
                            @interaction.Predicate.Name
                        }
                    </td>
                    <td>
                        @if (interaction.Object != null)
                        {
                            @Html.ActionLink(interaction.Object.Name, "Details", new { id = interaction.Object.Id, type = interaction.Object.Type })
                        }
                    </td>
                    <td>
                        @interaction.Indicator
                    </td>
                    <td>
                        @if (interaction.ImpactSubject != null)
                        {
                            @Html.ActionLink(interaction.ImpactSubject.Name, "Details", new { id = interaction.ImpactSubject.Id, type = interaction.ImpactSubject.Type })
                        }
                    </td>

                </tr>

            }
        </table>
    }

</div>