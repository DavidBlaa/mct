@model List<MCT.Web.Models.SpeciesModel>

<div id="searchResultContent">
    <div id="numberOfResults">
        Anzahl der gefundenen Species : @Model.Count 
    </div>
    
        @*@foreach (var species in Model)*@

        @for (int i = 0; i < Model.Count; i = i + 3)
        {
            <div id="searchResultContentRows" class="row">
                
                @if (i < Model.Count)
                {
                    @Html.Partial("_speciesPartialView", Model.ElementAt(i));
                }
                
                @if (i+1 < Model.Count)
                {
                    @Html.Partial("_speciesPartialView", Model.ElementAt(i+1));
                }
                
                @if (i+2 < Model.Count)
                {
                    @Html.Partial("_speciesPartialView", Model.ElementAt(i+2));
                }
                
                @if (i + 3 < Model.Count)
                {
                    @Html.Partial("_speciesPartialView", Model.ElementAt(i + 3));
                }
            </div>
        }
     
</div>