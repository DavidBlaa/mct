@model List<MCT.DB.Entities.Bloom>
@using MCT.DB.Entities;

@{
    string listId = "bloom-list";
}


<ul id="@listId" class="dl-horizontal">
    @foreach (var item in Model)
    {
        <li>
            @Html.EditorFor(modelItem => item)

        </li>
    }
</ul>
<ul>
    <li>
        <div class="fa fa-plus icon" onclick="addBloom()"></div>
    </li>
</ul>
<script type="text/javascript">

    $(function() {
        addBloom();
    });


    function addBloom()
    {
        var newElement = $('<li>');

        //getEmptyBloomView
        $.get("/Search/GetEmptyBloom", function (data) {

            newElement.prepend($(data));
            $("#bloom-list").append(newElement);

        });
    }

</script>