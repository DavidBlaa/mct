@model List<MCT.DB.Entities.Harvest>
@using MCT.DB.Entities;

@{
    string listId = "harvest-list";
}


<ul id="@listId" class="dl-horizontal">
    @foreach (var item in Model)
    {
        <li>
            @Html.EditorFor(modelItem => item)

        </li>
    }
</ul>
<ul>
    <li>
        <div class="fa fa-plus icon" onclick="addHarvest()"></div>
    </li>
</ul>
<script type="text/javascript">

    $(function() {
        addHarvest();
    });


    function addHarvest()
    {
        var newElement = $('<li>');

        //getEmptyHarvestView
        $.get("/Search/GetEmptyHarvest", function (data) {

            newElement.prepend($(data));
            $("#harvest-list").append(newElement);

        });
    }

</script>